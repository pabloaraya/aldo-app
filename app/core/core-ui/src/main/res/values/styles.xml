<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogMaterialTheme</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogMaterialTheme</item>
    </style>

    <style name="RegularToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/grey</item>

    </style>

    <!-- Dialog style -->
    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blackSemiTransparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/ZoomAnimation.Window</item>
    </style>

    <style name="ZoomAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/background_grey</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>

    <style name="RoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet_white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="maxLines">1</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_16dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_16dp</item>
        <item name="boxBackgroundColor">#373C45</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputStyleDialog" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/primary_text_color</item>
        <item name="maxLines">1</item>
        <item name="hintTextColor">@color/primary_text_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_24dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_24dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_24dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_24dp</item>
        <item name="boxBackgroundColor">@color/bg_input_dialog</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="DropDownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/primary_text_color</item>
        <item name="endIconTint">@color/primary_text_color</item>
        <item name="maxLines">1</item>
        <item name="hintTextColor">@color/primary_text_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_24dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_24dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="DropdownMenuItem" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonShapeAppearanceRadius24" parent="ButtonShapeAppearance">
        <item name="cornerSize">@dimen/corner_radius_24dp</item>
    </style>

    <style name="ButtonShapeAppearanceRadius16" parent="ButtonShapeAppearance">
        <item name="cornerSize">@dimen/corner_radius_16dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearanceRadius24</item>
    </style>

    <style name="SecondaryButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="drawableTint">@color/secondary_button_icon_tint</item>
        <item name="backgroundTint">@color/secondary_button_color</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearanceRadius16</item>
    </style>

    <style name="SelectableButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@drawable/selector_selectable_button_text</item>
        <item name="backgroundTint">@drawable/selector_selectable_button_background</item>
        <item name="drawableTint">@drawable/selector_drawable_tint_selectable_button</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearanceRadius16</item>
    </style>

    <style name="ButtonOutlinedRegular" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearanceRadius24</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialSwitchStyle" parent="">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>
    </style>

    <!--Styling Material Alert Dialog-->
    <style name="AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="android:background">@android:color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTextStyle</item>
    </style>

    <style name="AlertDialogBodyTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="backgroundColor">@android:color/white</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="backgroundColor">@android:color/white</item>
    </style>

    <!--Styling Material Date Picker-->
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@android:color/holo_red_dark</item>
    </style>

    <!--TextView styles-->

    <!--Regular font-->
    <style name="Regular">
        <item name="android:textSize">@dimen/material_text_body</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Regular16sp" parent="Regular">
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <!--Regular bold font-->
    <style name="Bold">
        <item name="android:textSize">@dimen/material_text_body</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSubHead16sp" parent="Bold">
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <style name="BoldSubTitle18sp" parent="Bold">
        <item name="android:textSize">@dimen/material_text_sub_title</item>
    </style>

    <style name="BoldHeadline24sp" parent="Bold">
        <item name="android:textSize">@dimen/material_text_headline2</item>
    </style>

    <!--spartan Rocks font-->
    <style name="SpartanFont">
        <item name="android:textSize">@dimen/material_text_sub_title</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/spartan_regular</item>
    </style>

    <style name="SpartanFontBold">
        <item name="android:textSize">@dimen/material_text_sub_title</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/spartan_bold</item>
    </style>

    <style name="SpartanBody" parent="SpartanFont">
        <item name="android:textSize">@dimen/material_text_body</item>
    </style>

    <style name="SpartanHeadline2" parent="SpartanFont">
        <item name="android:textSize">@dimen/material_text_headline2</item>
    </style>

</resources>